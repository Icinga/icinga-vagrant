# Aggregation methods for whisper files. Entries are scanned in order,
# and first match wins. This file is scanned for changes every 60 seconds
#
#  [name]
#  pattern = <regex>
#  xFilesFactor = <float between 0 and 1>
#  aggregationMethod = <average|sum|last|max|min>
#
#  name: Arbitrary unique name for the rule
#  pattern: Regex pattern to match against the metric name
#  xFilesFactor: Ratio of valid data points required for aggregation to the next retention to occur
#  aggregationMethod: function to apply to data points for aggregation
#

# !!! generated by puppet !!!

<%
  rules = scope.lookupvar('graphite::gr_storage_aggregation_rules')
  rules.sort.each do |name, rule| %>
[<%= name %>]
<%- if rule['pattern'] then %>pattern = <%= rule['pattern'] %><% end %>
<%- if rule['factor'] then %>xFilesFactor = <%= rule['factor'] %><% end %>
<%- if rule['method'] then %>aggregationMethod = <%= rule['method'] %><% end %>
<% end %>